<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/insurance_title"
            style="@style/title"
            android:text="@string/insurance_title" />

        <RelativeLayout
            android:id="@+id/insurance_container"
            style="@style/white_container"
            android:layout_below="@+id/insurance_title">

            <TableLayout
                android:id="@+id/insurance_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">

                <TableRow>

                    <TextView android:text="2018-01-01  14:00"
                        android:textSize = "30sp"/>
                </TableRow>

                <TextView
                    android:layout_marginTop="20dp"
                    android:text="보험 상품/가입자 정보"
                    android:textSize="30sp"/>

                <TableRow>

                    <Spinner
                        android:layout_marginTop="20dp"
                        android:id = "@+id/insuranceName"
                        android:layout_height = "40dp"
                        android:layout_width="match_parent"
                        android:textSize = "50sp"
                        >

                    </Spinner>
                </TableRow>

                <TableRow>

                    <Spinner
                        android:layout_marginTop="20dp"
                        android:id = "@+id/insuranceType"
                        android:layout_height = "40dp"
                        android:layout_width="match_parent"
                        android:textSize = "30sp"
                        >

                    </Spinner>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop = "20dp"
                        android:text="생년월일"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        >
                    </TextView>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="20dp">

                    <TextView
                        android:text="성별"
                        android:textSize="30sp"/>

                    <RadioGroup
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <RadioButton
                            android:layout_width="0dp"
                            android:text = "남성"
                            android:textSize="30sp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:text = "여성"
                            android:textSize="30sp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"/>
                    </RadioGroup>
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/apply_insurance"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text ="보험신청"
                android:background="#4BAADD"
                android:textColor="@color/white"
                android:textSize = "30sp"
                >
            </Button>

        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>