<resources>
    <style name="loadingTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@drawable/loading_img</item>
    </style>

    <style name="yanoljaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="white_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_below">@id/pay_title</item>
    </style>
</resources>
