<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssenstone.ssenstone_bank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/yanoljaTheme">
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/loadingTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.HomeActivity"/>
        <activity android:name=".Activity.PayActivity"/>
        <activity android:name=".Activity.TransferActivity"/>
        <activity android:name=".Activity.LendActivity"/>
        <activity android:name=".Activity.InsuranceActivity"/>
    </application>

</manifest>